<!-- 헤더 -->
<div id="header">
  <div id="header_wrap">
    <a href="/"><img src="/logo/logo.png" width="100%" height="55"></a>
    <nav>
      <ul id="header_content">
        <input class="search_input" type="text" placeholder="물품을 검색해보세요." id="search_input">
        <button class="search_button" onclick="search()">검색</button>
        <% if (header && header.user && header.user.is_login_status) { %>
        <li>
          <a class="header_menu" href="/auction/item/register">
            매물등록
          </a>

        </li>
        <li>
          <a class="header_menu" href="/user/sell">
            <%= header.user.nickname %>
          </a>
        </li>
        <button id="logout_button" onclick="logout()">로그아웃</button>
        <% } else { %>
        <li>
          <a class="header_menu" href="/login">로그인</a>
        </li>
        <li>
          <a class="header_menu" href="/signup">회원가입</a>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>
</div>